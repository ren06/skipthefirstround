    - var page = 'personal-information';

    script.
        $(document).ready(function () {

            var localEditMode = !{JSON.stringify(editMode)}

            if (localEditMode) {

                $(".buttonDisplay").hide()
                $(".buttonEdit").show()
            }
            else{
                //Display Mode
                $('.form-control').prop('disabled', true);
                //$('.btn').addClass('disabled');

                $(".buttonDisplay").show()
                $(".buttonEdit").hide()
            }

        });

