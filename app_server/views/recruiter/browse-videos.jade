extends ../user/layout

include ../_includes/sharedHTMLfunctions

block content

    .col-lg-2.text-center
    .col-lg-8
        .row

            h3 Browse Candidates videos

            include ../_includes/search-offers

            if (results && results.length > 0)
                h3 Results
                table.table
                    tr
                        th Sector
                        th Contract
                        th Company
                        th Location
                        th Language
                        th View
                    each result in results
                        tr
                            td #{result.sectorText}
                            td #{result.offerTypeText}
                            td #{result.companyTypeText}
                            td #{result.location}
                            td #{result.languageText}
                            td
                                -var id = result.providerUniqueId;
                                -var html = cloudinary.video(id, {width: 250, height: 250, crop: "fit", controls: true});
                                !=html




            else if (message)
                h3=message

        .row

        .row



    .col-lg-2.text-center