extends ../user/layout



block content

    .col-lg-2.text-center
    .col-lg-8
        .row
            br
            h3 Mes offres
            br

            table.table
                tr
                    th Offre
                    th Nombre de vues
                    th Candidatures en cours
                    th Interviews realisées
                    th Détails
                    th Candidats
                each offer in offers
                    tr
                        td=offer.sectorText + ' - ' + offer.positionText + ' - ' + offer.offerTypeText + ' - ' + offer.companyTypeText + ' - ' + offer.location
                        td=offer.viewCount
                        td=offer.applyCount
                        td=offer.videoCount
                        td
                            a(href='offer/#{offer.id}') Détails
                        td
                            a(href='offer/#{offer.id}/videos') Vidéos Candidats

        .row

        .row



    .col-lg-2.text-center