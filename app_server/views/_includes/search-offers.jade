form.form-horizontal(id="searchForm", action="", method="post", role="form")
    if(error)
        .alert.alert-danger() #{error}

    .form-group.required
        label.control-label.col-sm-4(for='sector') Sectors:
        .col-sm-8
            select#sector(name='sector').form-control.required
                each val, key in sectorOptions
                    option(value=key selected=(key == formData.sector))=val

    .form-group.required
        label.control-label.col-sm-4(for='offerType') Contract types:
        .col-sm-8
            select#offerType(name='offerType').form-control.required
                each val, key in offerTypeOptions
                    option(value=key selected=(key == formData.offerType))=val


    .form-group.required
        label.control-label.col-sm-4(for='companyType') Company types:
        .col-sm-8
            select#companyType(name='companyType').form-control.required
                each val, key in companyTypeOptions
                    option(value=key selected=(key == formData.companyType))=val

    .form-group.required
        label.control-label.col-sm-4(for='location') Location:
        .col-sm-8
            select#location(name='location').form-control.required
                each val, key in locations
                    option(value=key selected=(key == formData.location))=val

    .form-group.required
        label.control-label.col-sm-4(for='language') Language:
        .col-sm-8
            select#language(value=formData.language, name='language').form-control.required
                each val, key in languageOptions
                    option(value=key selected=(key == formData.language))=val


    .form-group
        .col-sm-offset-4.col-sm-10
            button.btn.btn-default(type="submit") Chercher
