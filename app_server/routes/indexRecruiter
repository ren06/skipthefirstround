var express = require('express');
var router = express.Router();
var common = require('../controllers/common');


var ctrlRegister = require('../controllers/register');
var ctrlRecruiter = require('../controllers/recruiter');
var ctrlEmails = require('../common/emails');
var ctrlInformation = require('../controllers/information');
var ctrlHomepage = require('../controllers/homepage');

router.get ('/', ctrlHomepage.homepageRecruiter);
router.get ('/recruiter-register', ctrlRecruiter.registerRecruiter);
router.post('/recruiter-register', ctrlRecruiter.doRegisterRecruiter);
router.get ('/recruiter-logout', ctrlRecruiter.doLogout);
router.get ('/recruiter-login/', ctrlRecruiter.login);
router.post('/recruiter-login/', ctrlRecruiter.doLogin);
router.get ('/confirmation', ctrlRecruiter.confirmation);

router.get ('/main-menu', common.checkPermission(['recruiter']), ctrlRecruiter.mainMenu);
router.get ('/post-offer', ctrlRecruiter.postOffer);
router.post('/post-offer', ctrlRecruiter.doPostOffer);
router.get ('/view-favourites', ctrlRecruiter.viewFavourites);
router.get ('/my-offers', ctrlRecruiter.myOffers);
router.get ('/browse-videos', ctrlRecruiter.searchVideos);
router.post('/browse-videos', ctrlRecruiter.doSearchVideos);



// router.get ('/test/',  res.render('user/generic-text', {
//     title: res.__('Unauthorised'),
//     content: 'You are not authorised, please login first',
// }));

module.exports = router;
